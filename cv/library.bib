doi = {10.1016/j.asr.2017.01.028},
file = {:Users/teixeira/Library/Application Support/Mendeley Desktop/Downloaded/Hauk et al. - 2017 - Gravity field recovery in the framework of a Geodesy and Time Reference in Space (GETRIS).pdf:pdf},
