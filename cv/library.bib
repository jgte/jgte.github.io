journal = {Prog. Oceanogr.},
keywords = {Air-sea interaction,Decadal shifts in the North Atlantic climate,North Atlantic Oscillation,Ocean and atmosphere interannual variability,Ocean heat content,Stmospheric circulation regimes,Subpolar North Atlantic},
month = {nov},
title = {{North Atlantic atmospheric and ocean inter-annual variability over the past fifty years - dominant patterns and decadal shifts}},
url = {http://www.sciencedirect.com/science/article/pii/S0079661114001712},
year = {2014}
}
