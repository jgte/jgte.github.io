journal = {Sensors (Switzerland)},
keywords = {Acquisition process,BeiDou system,Ionospheric scintillation,Multiple-phase screen theory,Tracking process,acquisition process,ionospheric scintillation,multiple,phase screen theory,tracking process},
month = {nov},
number = {11},
pages = {1883},
publisher = {Multidisciplinary Digital Publishing Institute},
title = {{The ionospheric scintillation effects on the BeiDou signal receiver}},
