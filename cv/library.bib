journal = {Nature},
keywords = {Antarctic Regions,Artifacts,Freezing,Gravitation,Ice Cover,Models,Oceans and Seas,Research Design,Satellite Communications,Seawater,Seawater: analysis,Theoretical,Time Factors,Uncertainty},
number = {7425},
