issn = {0949-7714},
journal = {J. Geod.},
keywords = {Assimilation,Calibration,Correlated errors,Ensemble Kalman filter,GRACE,WaterGAP Global Hydrology Model,assimilation,calibration,correlated errors,ensemble kalman filter,grace,watergap global},
month = {jun},
