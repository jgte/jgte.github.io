file = {:Users/teixeira/Library/Application Support/Mendeley Desktop/Downloaded/Hannula, Hannula - 2016 - Time series analysis Gap filling and feature recognition University of Helsinki.pdf:pdf},
school = {University of Helsinki},
title = {{Time series analysis: Gap filling and feature recognition}},
