keywords = {Allan deviation,Carrier phase,GPS,High-rate,Multipath,PPP,Seismology,Sidereal filtering},
number = {1},
pages = {111--122},
publisher = {Springer Berlin Heidelberg},
title = {{Effectiveness of observation-domain sidereal filtering for GPS precise point positioning}},
