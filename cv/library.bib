keywords = {Dynamics model,Elliptical reference orbit,J2-perturbed,Linear relative motion,Satellite formation},
month = {oct},
pages = {55--69},
publisher = {Elsevier},
title = {{Linearized dynamics model for relative motion under a J2- perturbed elliptical reference orbit}},
url = {http://dx.doi.org/10.1016/j.ijnonlinmec.2013.04.016 http://linkinghub.elsevier.com/retrieve/pii/S0020746213000929},
