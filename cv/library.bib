doi = {10.1007/s10291-016-0515-3},
file = {:Users/teixeira/Library/Application Support/Mendeley Desktop/Downloaded/Chen et al. - 2017 - Research on a method of real-time combination of precise GPS clock corrections.pdf:pdf},
issn = {15211886},
journal = {GPS Solut.},
keywords = {Combination,Exception handling,Parameter separation,Precise clock corrections,Real-time,combination {\'{a}} exception handling,corrections {\'{a}},real-time {\'{a}} precise clock,{\'{a}} parameter separation},
number = {1},
