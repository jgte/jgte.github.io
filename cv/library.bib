journal = {Geophys. J. Int.},
keywords = {Arctic region,Earth rotation variations,Global change from geodesy,Satellite geodesy,Time variable gravity,Transient deformation},
number = {3},
pages = {1495--1506},
publisher = {Blackwell Publishing Ltd},
title = {{Anomalous precipitation signatures of the Arctic Oscillation in the time-variable gravity field by GRACE}},
