issn = {0949-7714},
journal = {J. Geod.},
keywords = {GRACE,L-curve criterion,Lanczos bidiagonalization,Regularization,Tikhonov regularization,Time-variable gravity,grace,ization,l-curve criterion,lanczos bidiagonalization,regular-,tikhonov regularization,time-variable gravity},
