issn = {0039-3169},
journal = {Stud. Geophys. Geod.},
keywords = {GOCE,gravitational curvature,gravity field modeling,inverse problem,satellite gradiometry},
month = {jul},
number = {3},
pages = {453--468},
title = {{On inversion of the second- and third-order gravitational tensors by Stokes' integral formula for a regional gravity recovery}},
