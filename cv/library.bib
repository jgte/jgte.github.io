doi = {10.1007/s00190-012-0579-y},
file = {:Users/teixeira/cloud/Papers/Gerlach, Rummel - 2013 - Global height system unification with GOCE A simulation study on the indirect bias term in the GBVP approach.pdf:pdf},
issn = {09497714},
journal = {J. Geod.},
keywords = {GBVP,GOCE,Height unification,Indirect bias term,gbvp,goce,height unification},
month = {jul},
number = {1},
pages = {57--67},
title = {{Global height system unification with GOCE: A simulation study on the indirect bias term in the GBVP approach}},
