author = {Thomas, J.B. Brooks},
file = {:Users/teixeira/Library/Application Support/Mendeley Desktop/Downloaded/Thomas - 1999 - An Analysis of Gravity-Field Estimation Based on Intersatellite Dual-1-Way Biased Ranging(2).pdf:pdf},
institution = {Jet Propulsion Laboratory},
pages = {196},
title = {{An Analysis of Gravity-Field Estimation Based on Intersatellite Dual-1-Way Biased Ranging}},
year = {1999}
}
