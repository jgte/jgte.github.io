file = {:Users/teixeira/Library/Application Support/Mendeley Desktop/Downloaded/Slangen et al. - 2017 - A Review of Recent Updates of Sea-Level Projections at Global and Regional Scales(2).pdf:pdf},
issn = {15730956},
journal = {Surv. Geophys.},
keywords = {Glaciers,Ice sheets,Mediterranean,Regional sea-level change,Sea-level change,Sea-level projections,Terrestrial water storage},
month = {jan},
number = {1},
pages = {385--406},
publisher = {Springer Netherlands},
