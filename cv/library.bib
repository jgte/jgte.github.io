journal = {Sp. Weather},
keywords = {Ionospheric irregularities,equatorial Ionosphere,receiver tracking performance},
month = {jun},
number = {6},
pages = {n/a--n/a},
title = {{Correlation analysis between ionospheric scintillation levels and receiver tracking performance}},
url = {http://doi.wiley.com/10.1029/2012SW000769},
